<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/upcoming_events_background"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/card_no_paddings"
  android:orientation="vertical">

  <TextView
    android:id="@+id/row_widget_upcoming_event_date"
    style="@style/Upcoming.DateTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#000"
    tools:text="Monday, 13 January" />


  <ImageView
    android:layout_width="match_parent"
    android:layout_height="@dimen/horizontal_divider_height"
    android:src="@color/divider_grey" />

  <TextView
    android:id="@+id/row_widget_upcoming_event_bankholidays"
    style="@style/Upcoming.DateTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/bankholiday_green"
    tools:text="bankholiday bla bla" />

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="@dimen/horizontal_divider_height"
    android:src="@color/divider_grey" />

  <TextView
    android:id="@+id/row_widget_upcoming_event_namedays"
    style="@style/Upcoming.DateTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxLines="2"
    android:textColor="@color/nameday_blue"
    tools:text="namedays blabla" />

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="@dimen/horizontal_divider_height"
    android:src="@color/divider_grey" />


  <LinearLayout
    android:id="@+id/row_widget_upcoming_contact_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_gravity="center_vertical"
      android:layout_weight="1"
      android:orientation="vertical">

      <TextView
        android:id="@+id/row_widget_upcoming_event_contact_name_1"
        style="@style/Upcoming.ContactName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        tools:text="Alex Styl" />

      <TextView
        android:id="@+id/row_widget_upcoming_event_contact_event_type_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textColor="#000"
        tools:text="One, two, three" />
    </LinearLayout>

    <ImageView
      android:id="@+id/row_widget_upcoming_event_contact_avatar_1"
      style="@style/Upcoming.Avatar"
      android:layout_gravity="center_vertical"
      tools:background="#000" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/row_widget_upcoming_contact_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_gravity="center_vertical"
      android:layout_weight="1"
      android:orientation="vertical">

      <TextView
        android:id="@+id/row_widget_upcoming_event_contact_name_2"
        style="@style/Upcoming.ContactName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        tools:text="Alex Styl" />

      <TextView
        android:id="@+id/row_widget_upcoming_event_contact_event_type_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textColor="#000"
        tools:text="One, two, three" />
    </LinearLayout>

    <ImageView
      android:id="@+id/row_widget_upcoming_event_contact_avatar_2"
      style="@style/Upcoming.Avatar"
      android:layout_gravity="center_vertical"
      tools:background="#000" />
  </LinearLayout>


  <Button
    android:id="@+id/row_widget_upcoming_event_more"
    style="@style/Upcoming.ShowMore"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/upcoming_event_padding_horizontal"
    android:paddingRight="@dimen/upcoming_event_padding_horizontal"
    android:textColor="#000"
    tools:text="+1 more" />

</LinearLayout>

